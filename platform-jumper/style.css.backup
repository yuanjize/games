:root {
    --bg-color: #0f172a;
    --panel-bg: rgba(30, 41, 59, 0.7);
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --accent-color: #f43f5e; /* Rose 500 */
    --accent-glow: rgba(244, 63, 94, 0.5);
    --success-color: #10b981;
    --font-family: 'Inter', system-ui, sans-serif;
}

body {
    margin: 0;
    padding: 0;
    font-family: var(--font-family);
    background-color: var(--bg-color);
    color: var(--text-primary);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    overflow: hidden;
}

.game-container {
    width: 100%;
    max-width: 1000px;
    height: 90vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
    gap: 20px;
    padding: 20px;
}

header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--panel-bg);
    backdrop-filter: blur(12px);
    padding: 15px 30px;
    border-radius: 16px;
    border: 1px solid rgba(255,255,255,0.1);
}

.stats {
    display: flex;
    gap: 20px;
}

.stat-box {
    text-align: center;
}

.stat-label {
    font-size: 0.75rem;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.stat-value {
    font-size: 1.25rem;
    font-weight: 700;
}

#gameCanvas {
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, #1e293b, #0f172a);
    border-radius: 16px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(255,255,255,0.05);
}

.game-overlay {
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(15, 23, 42, 0.9);
    backdrop-filter: blur(8px);
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 50;
    border-radius: 16px;
}

.overlay-content {
    text-align: center;
    background: rgba(30, 41, 59, 0.9);
    padding: 40px;
    border-radius: 24px;
    border: 1px solid rgba(255,255,255,0.1);
    box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
    max-width: 400px;
}

h1 {
    font-size: 2.5rem;
    margin: 0 0 10px 0;
    background: linear-gradient(135deg, #fff 0%, #f43f5e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.btn {
    background: linear-gradient(135deg, var(--accent-color), #be123c);
    color: white;
    border: none;
    padding: 12px 32px;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    margin-top: 20px;
    box-shadow: 0 4px 12px var(--accent-glow);
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px var(--accent-glow);
}

/* Mobile Controls */
.mobile-controls {
    display: none;
    justify-content: space-between;
    padding: 10px;
    gap: 20px;
}

.control-btn {
    background: rgba(255,255,255,0.1);
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 12px;
    padding: 20px;
    flex: 1;
    color: white;
    font-size: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    touch-action: manipulation;
}

.control-btn:active {
    background: rgba(255,255,255,0.2);
}

@media (max-width: 768px) {
    .mobile-controls { display: flex; }
    .game-container { height: 100vh; padding: 10px; }
    h1 { font-size: 2rem; }
}
